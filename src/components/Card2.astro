---
// Card2.astro
const { picture, alt, name, desc, btn, slug } = Astro.props;
import { decodeHTMLEntities } from "../scripts/scripts.js";
const articleUrl = slug ? `/posts/${slug}` : "/404";
const decodedName = name ? decodeHTMLEntities(name) : "Not found";
---

<div
  class="Card3 w-90 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700 flex flex-col overflow-hidden
  "
>
  <a href={articleUrl} class="h-1/2">
    <img
      class="Animated w-full h-full object-cover rounded-t-lg"
      src={picture || "https://placehold.co/150x400?text=Image+Unavailable"}
      alt={alt || "Picture unavailable"}
    />
  </a>

  <div class="p-4 flex flex-col h-1/2 justify-between overflow-y-hidden">
    <a href={articleUrl}>
      <h5
        class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
      >
        {decodedName || "Not found"}
      </h5>
    </a>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
      {desc || "Please enter data"}
    </p>

    <a
      href={articleUrl}
      class="inline-flex items-center w-auto px-3 py-2 text-sm font-medium text-white bg-red-700 rounded-lg hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800"
    >
      {btn || "Article unavailable"}
      <svg
        class="w-3.5 h-3.5 ml-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg>
      <!-- This part creates the lil arrow on the read more button :) -->
    </a>
  </div>
</div>
