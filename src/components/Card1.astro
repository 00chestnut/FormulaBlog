---
const { picture, alt, name, desc } = Astro.props;
---

<div class="card">
  <img 
    src={picture || "https://placehold.co/150x400?text=Image+Unavailable"} 
    alt={alt || "Unavailable"} 
    class="cardImg"
  />
  <h2>{name || "Not found"}</h2>
  <p>{desc || "Please insert data"}</p>
</div>
<style>
  /* Cards */
  .card{
    background: hsl(0, 0%, 100%);
    border: 1px solid hsl(0, 0%, 82%);
    border-radius: 5px;
    box-shadow: 5px 5px 3px hsla(0, 0%, 83%, 0.434);
    width: 100%;
    max-width: 400px;
    height: 250px;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    padding-bottom: 20px;
    margin-top: 20px;
    font-family: Cascadia, sans-serif;
  }
  
  .card button {
    border-radius: 5px;
    background-color: hsl(0, 100%, 23%);
    width: 90px;
    color: rgb(191, 191, 191);
    font-size: 0.9rem;
    align-self: center;
  }
  
  .card h2,
  .card p {
    margin-top: 10px;
    padding-left: 20px;
  }
  
  .card h2 {
    color: rgb(106, 106, 106);
    font-size: 1.25rem;
    margin-bottom: 0;
    font-weight: 600;
  }
  
  .card p {
    margin-bottom: 10px;
    color: rgb(191, 191, 191);
  }
  
  .card .cardImg {
    width: 100%;
    height: 150px;
    padding: 0;
    object-fit: cover;
    object-position: bottom;
  }
  </style>