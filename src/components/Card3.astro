---
const { picture, alt, name, desc, btn } = Astro.props;
---
<div class="Card3 max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
    <a href="#"> 
        <img class="rounded-t-lg" src={picture || "https://placehold.co/150x400?text=Image+Unavailable"} alt={alt || "Picture unavailable"} />
    </a>
    <div class="p-5">
        <a href="#"> 
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{name || "Not found"}</h5>
        </a>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{desc || "Please enter data"}</p>
        <a href="#" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-red-700 rounded-lg hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800">
            {btn || "Article unavailable"}
        </a>
    </div>
</div>
